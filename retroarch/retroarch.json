{
	"name": "retroarch",
	"config-opts": [ "--enable-dbus" ],
	"make-args": [ "GLOBAL_CONFIG_DIR=${FLATPAK_DEST}/etc" ],
	"sources": [
		{
			"type": "git",
			"url": "https://github.com/libretro/RetroArch.git",
			"branch": "9b282aa742b6c3d2f2925ae5a12e2cd7c6b6ad38"
		},
		{
			"type": "file",
			"path": "org.libretro.RetroArch/retroarch.cfg"
		}
	],
	"post-install": [
		"mkdir -p ${FLATPAK_DEST}/etc",
		"sed s:@prefix@:${FLATPAK_DEST}:g retroarch.cfg > ${FLATPAK_DEST}/etc/retroarch.cfg"
	],
	"modules": [
		"org.libretro.RetroArch/libpng/libpng-1.6.35.json",
		"org.libretro.RetroArch/nvidia-cg-toolkit/nvidia-cg-toolkit-3.1.0013.json",
		"org.libretro.RetroArch/shared-modules/SDL/SDL-1.2.15.json",
		"org.libretro.RetroArch/shared-modules/SDL/SDL_image-1.2.12.json",
		"org.libretro.RetroArch/shared-modules/SDL/SDL_mixer-1.2.12.json",
		"org.libretro.RetroArch/shared-modules/SDL/SDL_net-1.2.8.json",
		"org.libretro.RetroArch/shared-modules/SDL/SDL_ttf-2.0.11.json",
		"org.libretro.RetroArch/shared-modules/libusb/libusb.json",
		"org.libretro.RetroArch/shared-modules/gudev/gudev.json",
		"org.libretro.RetroArch/libbz2/libbz2-1.0.8.json",
		"org.libretro.RetroArch/xrandr/xrandr-1.5.1.json",
		"org.libretro.RetroArch/libaio/libaio-0.3.112.json",
		"org.libretro.RetroArch/shared-modules/glu/glu-9.json",
		"org.libretro.RetroArch/libdecor/libdecor-0.1.0.json"
	]
}
