<component type="desktop-application">
	<id>ca.parallel_launcher.ParallelLauncher</id>
	<launchable type="desktop-id">ca.parallel_launcher.ParallelLauncher.desktop</launchable>
	<name>Parallel Launcher</name>
	<summary>A simple easy-to-use launcher for the ParallelN64 and Mupen64Plus-Next emulators</summary>
	<developer_name>Matt Pharoah</developer_name>
	<url type="homepage">https://parallel-launcher.ca</url>
	<url type="bugtracker">https://gitlab.com/parallel-launcher/parallel-launcher/-/boards/2128467</url>
	<url type="help">https://parallel-launcher.ca/doc/parallel-launcher-manual.pdf</url>
	<content_rating type="oars-1.1" />
	<screenshots>
		<screenshot type="default">
			<caption>Parallel Launcher main window</caption>
			<image type="source" width="580" height="759">https://parallel-launcher.ca/img/screenshot.png</image>
		</screenshot>
	</screenshots>
	<description>
		<p>Parallel Launcher is an emulator launcher that aims to make playing N64 games, both retail and homebrew, as simple and as accessible as possible. Parallel Launcher uses the RetroArch emulator, but replaces its confusing menus and controller setup with a much simpler user interface. It also features optional integration with romhacking.com.</p>
	</description>
	<project_license>GPL-3.0</project_license>
	<metadata_license>GFDL-1.3</metadata_license>
	<icon type="remote">https://parallel-launcher.ca/img/appicon.svg</icon>
	<categories>
		<category>Game</category>
	</categories>
	<keywords>
		<keyword>N64</keyword>
		<keyword>Emulator</keyword>
	</keywords>
	<provides>
		<mediatype>application/x-n64-rom</mediatype>
		<mediatype>application/x-bps-patch</mediatype>
		<mediatype>x-scheme-handler/rhdc</mediatype>
		<binary>parallel-launcher</binary>
	</provides>
	<recommends>
		<control>gamepad</control>
	</recommends>
	<translation type="qt" source_locale="en_CA">parallel-launcher</translation>
	<releases>
		<release version="v6.2.1" date="2022-04-13">
			<description>
				<ul>
					<li>Added a Flatpak version of Parallel Launcher</li>
				</ul>
			</description>
		</release>
	</releases>
</component>
